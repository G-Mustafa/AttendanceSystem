<% include partials/header %>
<main>
    <div class="container-fluid">
        <h1 class="text-center heading-books">Attendance Books</h1>
        <div class="cont-books row">
            <% user.attendanceBooks.forEach((book)=>{ %>
                <a class="col-sm-4 col-6 book-link" style="overflow: hidden;" href="/attendanceBooks/<%= book.id %>">
                    <div>
                        <p class="text-center"><%= book.title %></p>
                        <p class="text-center"><%= book.session %></p>
                    </div>
                </a>
            <% }) %>
            <div class="col-sm-4 col-6">
                <button class="addbtn" onclick="document.getElementById('id01').style.display='block'"><i class="fas fa-plus-circle fa-5x"></i></button>
            </div> 
        </div>
        <section>
            <div id="id01" class="modal">   
                <form class="modal-content animate" action="/attendanceBooks" method="POST">
                    <div class="mycontainer">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input class="form-control" type="text" name="title" id="title" required>
                        </div>
                        <div class="form-group">
                            <label for="session">Session</label>
                            <input class="form-control" type="text" name="session" id="session" required>
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="4" cols="10"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="total">No. of Attendees</label>
                            <input class="form-control" id="total" name="noOfAttendees" type="number">
                        </div>
                        <div id="attendee-names" class="form-group">
                        </div>
                        <button class="btn btn-outline-primary form-btn">Submit</button>
                    </div>
                </form>
            </div>
        </section>
    </div>
</main>

<!-- Javascript -->
<script src="/public/js/index.js"></script>

<% include partials/footer %>